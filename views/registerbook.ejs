<%- include('partials/header.ejs')%>
    <link rel="stylesheet" href="/stylesheets/registerbook.css">
    <%- include('partials/nav.ejs')%>

        <div class="form-container">

            <form action="/registerbook" method="POST">
                
                <h1>Register Book</h1>
                
                <div class="input-box">
                    <input type="text" placeholder="Author" name="author">
                </div>

                <div class="input-box">
                    <select name="country">
                        <option value="">Select Country</option>
                        <% countryNames.forEach(function(c) {%>
    
                            <option value="<%= c%>">
                                <%= c%>
                            </option>
    
                            <% })%>
                    </select>
                </div>

                <div class="input-box">
                    <input type="text" placeholder="Image link" name="imagelink">
                </div>

                <div class="input-box">
                    <select name="language">
                        <option value="">Select Language</option>
                        <% languageNames.forEach(function(l){ %>
    
                            <option value="<%= l.name%>">
                                <%= l.name%>
                            </option>
    
                        <% }) %>
    
                    </select>
                </div>

                <div class="input-box">
                    <input type="text" placeholder="Link" name="link">
                </div>

                <div class="input-box">
                    <input type="number" placeholder="Pages" name="pages">
                </div>

                <div class="input-box">
                    <input type="text" placeholder="Title" name="title">     
                </div>

                <div class="input-box">
                    <input type="text" placeholder="Year of publication" name="publication">
                </div>

                <button class="btn">Register Book</button>
            </form>
        </div>


        <%- include('partials/footer.ejs')%>